<div class="container-fluid">
<div class="row">
  <div class="col-md-6">
    <% if @gyms.photo.present? %>
      <%= image_tag(@gyms.photo.image.medium.url, class: "thumbnail") %>
    <% else %>
      <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
    <% end %>
  </div>
    <div class="col-md-6">
      <h3> <%=@gyms.name%> </h3>
       <p>地址: <%= @gyms.address %></p>
       <p>電話: <%= @gyms.phone %></p>
       <p>資訊: <%= @gyms.introduction %></p>
      <hr>
      <h3>本館教練</h3>
 <div class="row">
  <% @gyms.coaches.each do |coach| %>
    <div class="col-xs-6 col-md-6">
    <p>姓名: <%= coach.name %></p>
    <p>擅長: <%= coach.major %></p>
    <p>簡介: <%= coach.introduction %></p>
    <p><%= link_to '預約', gym_coach_reservation_path(@gyms, coach), class: "btn btn-info" %></p>
    </div>
  <% end %>
</div>
  <% @gym = Gym.find_by(params[:gym_id]) %>
    <br>
    <% if current_user.admin? %>
       <%= link_to("新增教練", new_gym_coach_path(@gym), class: "btn btn-primary") %>
    <% end %>
       <%= link_to("上一頁", gyms_path, class: "btn btn-default") %>
  </div>
</div>
</div>
