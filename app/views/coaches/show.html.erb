<div class="row">

	<div class="col-md-6">
    <% if @coach.photo.present? %>
      <%= image_tag(@coach.photo.image.medium.url, class: "thumbnail") %>
    <% else %>
      <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
    <% end %>
  </div>
    <div class="col-md-6">

      <h3> <%= @coach.name %> </h3>
      <p>專長: <%= @coach.major %></p>
      <p>簡介: <%= @coach.introduction %></p>

    <br>
       <%= link_to("上一頁", gyms_path, class: "btn btn-default") %>
  </div>
</div>
