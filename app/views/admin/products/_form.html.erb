<%= form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.label("商品名稱") %>
    <%= f.text_field :title %>
  </div>

  <div class="group">
    <%= f.label("商品資訊") %>
    <%= f.text_area :description %>
  </div>

  <div class="group">
    <%= f.label("數量") %>
    <%= f.text_field :quantity %>
  </div>

  <div class="group">
    <%= f.label("價錢") %>
    <%= f.text_field :price %>
  </div>

  <div class="form-group">
    <%= f.simple_fields_for :photo do |c| %>
      <%= c.input :image , as: :file %>
    <% end %>
  </div>

  <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>

<% end %>